
public class Egzas {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		void method() {
			class A extends Thread {
				public void run() {
					try { Thread.sleep(200);
					} catch (InterruptedException e) {
						
					} 
					System.out.print(1);
					}
				}
			A a = new A();
			
			class B extends Thread {
				public void run() {
					try { a.join();
					} catch (InterruptedException e) {
						e.printStackTrace();
						} try { Thread.sleep(100);
						} catch (InterruptedException e) {}
						System.out.print(2); } } B b = new B();
						a.start();
						b.start();
						System.out.print(3);
						} 

	}
	method();

}
